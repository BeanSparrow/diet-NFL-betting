# Environment Variables for Diet NFL Betting Service
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
FLASK_ENV=development

# Database (automatically set by Heroku for PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database

# Discord OAuth Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://your-app-name.herokuapp.com/callback

# Optional: Discord Bot Token (if using bot features)
# DISCORD_BOT_TOKEN=your_bot_token

# Optional: Discord Webhook for notifications
# DISCORD_WEBHOOK_URL=your_webhook_url

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO

# Database Pool Settings (for PostgreSQL)
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=20
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=40